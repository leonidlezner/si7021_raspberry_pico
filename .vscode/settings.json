        "PICO_SDK_PATH": "${workspaceRoot}/vendor/pico-sdk",
        "PIMORONI_PICO_PATH": "${workspaceRoot}/vendor/pimoroni-pico/",
    },
    "cmake.statusbar.advanced": {
        "debug": {
            "visibility": "hidden"
        },
        "launch": {
            "visibility": "hidden"
        },
        "build": {
            "visibility": "default",
        },
        "buildTarget": {
            "visibility": "hidden"
        }
